<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/rlData"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:background="@drawable/item_good"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:paddingStart="10dp"
        android:id="@+id/llData"
        android:layout_width="130dp"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:id="@+id/rlData1"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:visibility="gone">
            <ImageView
                android:id="@+id/imgVwIcon1"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/button_app_icon"
                android:layout_marginBottom="10dp"/>
            <TextView
                android:id="@+id/txtVwItem1"
                android:layout_toEndOf="@id/imgVwIcon1"
                android:layout_centerVertical="true"
                android:layout_marginStart="5dp"
                android:gravity="center"
                android:layout_height="match_parent"
                android:layout_width="wrap_content"
                android:text="@string/header_item1"/>
            <TextView
                android:id="@+id/txtVwUnit1"
                android:layout_toEndOf="@id/txtVwItem1"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_marginStart="5dp"
                android:gravity="center"
                android:layout_height="match_parent"
                android:text="@string/header_item1"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rlData2"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:visibility="gone">
            <ImageView
                android:id="@+id/imgVwIcon2"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/button_app_icon"
                android:layout_marginBottom="10dp"/>
            <TextView
                android:id="@+id/txtVwItem2"
                android:layout_toEndOf="@id/imgVwIcon2"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_marginStart="5dp"
                android:gravity="center"
                android:layout_height="match_parent"
                android:text="@string/header_item1"/>
            <TextView
                android:id="@+id/txtVwUnit2"
                android:layout_toEndOf="@id/txtVwItem2"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_marginStart="5dp"
                android:gravity="center"
                android:layout_height="match_parent"
                android:text="@string/header_item1"/>
        </RelativeLayout>
    </LinearLayout>
    <RelativeLayout
        android:layout_toEndOf="@id/llData"
        android:layout_toStartOf="@+id/imgVwEvaluate"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="5dp">

        <TextView
            android:gravity="center"
            android:id="@+id/txtVwStatus"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/rlDateCreate"
            android:textAlignment="center"
            android:lineSpacingMultiplier="0.5"
            android:autoSizeTextType="uniform"
            android:autoSizeMaxTextSize="12sp"
            android:autoSizeMinTextSize="6sp"
            android:layout_marginBottom="1dp" />

        <RelativeLayout
            android:id="@+id/rlDateCreate"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/imgVwIcon0"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginRight="5dp"
                android:src="@drawable/schedule"/>
            <TextView
                android:id="@+id/txtVwDateCreate"
                android:layout_toEndOf="@id/imgVwIcon0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:text="HH:mm dd/MM/yyyy"/>
        </RelativeLayout>
    </RelativeLayout>
    <ImageView
        android:id="@+id/imgVwEvaluate"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:scaleType="fitCenter"
        android:padding="5dp"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/button_search"
        android:src="@drawable/search"/>
</RelativeLayout>